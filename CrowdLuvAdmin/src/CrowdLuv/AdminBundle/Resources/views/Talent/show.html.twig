{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Talent</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fbpid</th>
                <td>{{ entity.fbPid }}</td>
            </tr>
            <tr>
                <th>Fbpagename</th>
                <td>{{ entity.fbPageName }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ entity.mobile }}</td>
            </tr>
            <tr>
                <th>Homecity</th>
                <td>{{ entity.homeCity }}</td>
            </tr>
            <tr>
                <th>Waitlisted</th>
                <td>{{ entity.waitlisted }}</td>
            </tr>
            <tr>
                <th>Crowdluvvurl</th>
                <td>{{ entity.crowdluvVurl }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('talent') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('talent_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
