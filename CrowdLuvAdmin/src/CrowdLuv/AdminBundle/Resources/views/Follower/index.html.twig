{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Follower list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>CrowdLuv Id</th>   
                
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Facebook Location</th>
                                
                <th>Birthdate</th>
                <th>Mobile</th>
                <th>Signupdate</th>
                <th>Allowing CL email?</th>
                <th>Allowing CL SMS</th>
                <th>Deactivated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('follower_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                
                
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname|slice(0,15) }}</td>
                <td>{{ entity.locationFbname }}</td>
                                
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.mobile }}</td>
                <td>{% if entity.signupdate %}{{ entity.signupdate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.allowClEmail }}</td>
                <td>{{ entity.allowClSms }}</td>
                <td>{{ entity.deactivated }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('follower_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('follower_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('follower_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
